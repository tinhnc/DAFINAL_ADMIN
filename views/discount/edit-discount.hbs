<section
  class="vh-50 bg-image"
  style="background-image: url('https://mdbootstrap.com/img/Photos/new-templates/search-box/img4.jpg'); background-size: cover;"
>
  <div class="mask d-flex align-items-center h-100 gradient-custom-3">
    <div class="container h-100">
      <div class="row d-flex justify-content-center align-items-center h-100">
        <div class="col-12 col-md-9 col-lg-7 col-xl-6">
          <div class="card mt-4" style="border-radius: 15px;">
            <div class="card-body p-5">

              <div
                style="display: none;"
                id="message"
                class="alert alert-danger"
                role="alert"
              >
              </div>

              <h2 class="text-uppercase text-center mb-3">Thêm mã giảm giá</h2>
              {{!-- {{#with blog}} --}}
              <form action="/discount/edit-discount" method="POST">
                {{! title }}
                <div class="form-outline mb-2">
                  <label class="form-label" for="title">Tên mã giảm</label>
                  <input
                    value="{{discount.title}}"
                    name="title"
                    id="title"
                    type="text"
                    class="form-control form-control-lg"
                    required
                  />
                </div>

                <!-- Trong phần HTML -->
                {{! dayStart }}
                <div class="form-outline mb-2">
                  <label class="form-label" for="dayStart">Ngày bắt đầu</label>
                  <input
                    value="{{discount.dayStart}}"
                    name="dayStart"
                    id="dayStart"
                    type="date"
                    class="form-control form-control-lg"
                    required
                  />
                </div>

                {{! dayEnd }}
                <div class="form-outline mb-2">
                  <label class="form-label" for="dayEnd">Ngày kết thúc</label>
                  <input
                    value="{{discount.dayEnd}}"
                    name="dayEnd"
                    id="dayEnd"
                    type="date"
                    class="form-control form-control-lg"
                    required
                  />
                </div>

                {{! Code Discount }}
                <div class="form-outline mb-2">
                  <label class="form-label" for="codeDiscount">Mã Giảm</label>
                  <input
                    value="{{discount.codeDiscount}}"
                    name="codeDiscount"
                    id="codeDiscount"
                    type="text"
                    class="form-control form-control-lg"
                    required
                  />
                </div>

                {{! Code Discount }}
                <div class="form-outline mb-2">
                  <label class="form-label" for="quantity">Số lượng</label>
                  <input
                    value="{{discount.quantity}}"
                    name="quantity"
                    id="quantity"
                    type="text"
                    class="form-control form-control-lg"
                  />
                </div>

                {{! Discount }}
                <div class="form-outline mb-2">
                  <label class="form-label" for="discount">Giá tiền giảm</label>
                  <input
                    value="{{discount.discount}}"
                    name="discount"
                    id="discount"
                    type="number"
                    class="form-control form-control-lg"
                    required
                  />
                </div>

                {{! Description }}
                <div class="form-outline mb-4">
                  <label class="form-label" for="description">Mô tả</label>
                  <textarea
                    name="description"
                    id="description"
                    class="form-control form-control-lg border border-1 rounded-2 p-3"
                    rows="5"
                  ></textarea>
                </div>

                <button
                  class="btn btn-primary btn-lg gradient-custom-4"
                  type="submit"
                >Cập nhật</button>
              </form>
              {{!-- {{/with}} --}}
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>