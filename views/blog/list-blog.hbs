<div class="container-fluid">
  <div id="search-form" class="row mt-3 justify-content-start">

    <div class="col-12 col-md-6 col-xl-8 mb-3">
      <a class="btn btn-primary btn-block gradient-custom-4" href="/blog/add-blog">
        <i class="fas fa-plus-circle"></i>
        Thêm bài viết
      </a>
    </div>

    <div class="col-12 col-md-6 col-xl-4 mb-3">
      <div class="p-1 bg-light rounded rounded-pill shadow-lg d-flex justify-content-end">
        <div class="input-group">
          <input id="myInput" type="search" onkeyup="mySearchFunction()" placeholder="Nhập tên sản phẩm bạn cần tìm?"
            aria-describedby="btn-search" class="form-control border-0 bg-light">
          <div class="input-group-append">
            <button id="btn-search" class="btn btn-link text-primary"><i class="fa fa-search"></i></button>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<div class="container-fluid mt-4">
  <div class="table-responsive">
    <table id="myTable" class="table table-hover table-striped table-bordered">
      <thead>
        <tr>
          <th>Tiêu đề</th>
          <th>Ảnh</th>
          <th>Nội dung</th>
          <th>Người đăng</th>
          <th>Ngày đăng</th>
          <th>Thẻ</th>
        </tr>
      </thead>

      <tbody>
        {{#each blogs}}
        <tr>
          <td>{{this.title}}</td>
          <td>
            <a href="#" target="_blank">
              <img src="http://localhost:5000/img/blog/{{this.image}}" class="thumbnail img-responsive"
                alt="{{this.name}}" width="100" height="100" style="border-radius: 10px;">
            </a>
          </td>
          <td>{{this.content}}</td>
          <td>{{this.author}}</td>
          <td>{{this.date}}</td>
          <td>{{this.tags}}</td>
          <td>
            <div class="center">
              <a href="/blog/edit-blog/{{this._id}}">
                <i class="far fa-edit" title="Chỉnh sửa sản phẩm"></i>
              </a>

              <a href="/blog/delete-blog/{{_id}}" onclick="return confirm('Bạn có muốn xóa không')">
                <i class="fas fa-trash" style="margin-left: 30px; color: red" title="Xóa sản phẩm"></i>
              </a>
            </div>

          </td>
        </tr>
        {{/each}}
      </tbody>
    </table>
  </div>
</div>

<div class="center">
  <div class="mb-2">
    <nav aria-label="Page navigation example">
      <ul class="pagination">
        <li class="page-item {{#unless this.isPreviousPage}} disabled {{/unless}}">
          <a class="page-link " href="/blog?page={{this.previousPage}}" aria-label="Previous">
            <span aria-hidden="true">&laquo;</span>
            <span class="sr-only">Trước</span>
          </a>
        </li>
        {{#each pages}}
        <li class="page-item {{#if this.isCurrentPage}} active {{/if}}">
          <a class="page-link" href="/blog?page={{this.page}}">{{this.page}}</a>
        </li>
        {{/each}}

        <li class="page-item {{#unless this.isNextPage}} disabled {{/unless}}">
          <a class="page-link" href="/blog?page={{this.nextPage}}" aria-label="Next">
            <span aria-hidden="true">&raquo;</span>
            <span class="sr-only">Sau</span>
          </a>
        </li>
      </ul>
    </nav>
  </div>
</div>